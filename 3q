#include "main.h"

int reader(char * const**argv);

/**
 * reader - reads an input form stdin
 * @argc = number of arguments.
 * @argv: list of arguments.
 *
 * Return: 1 on success, -1 on failute.
 */
int reader(char * const**argv)
{
	int c, i, count;
	char line;
	char *ptr;

	ptr = &line;
	for (;;)
	{
		c = fgetc(stdin);
		*(ptr + count) = (char) c;
		count++;
		if (c == '\n')
			break;
	}
	if (count == 1)
			return (0);
	for (i = 0; i <= count; i++)
	{
		if (i == count)
		{
			argv[i] = '\0';
			break;
		}
		argv[i] = ptr[i];
	}
	return (count);
}	
